<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.joserv.activities.QrItem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="700dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/im"
                        android:layout_alignParentTop="true"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/placeholder_name"
                        android:textColor="@color/colorAccent"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtItemName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView2"
                        android:layout_margin="5dp"
                        android:layout_toEndOf="@+id/textView2"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=".kljlhkljbkuj"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/im"
                        android:layout_alignParentTop="true"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/type"
                        android:textColor="@color/colorAccent"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtItemType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView2"
                        android:layout_margin="5dp"
                        android:layout_toEndOf="@+id/textView2"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=".kljlhkljbkuj"
                        android:textSize="20sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/im"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_below="@+id/txtItemName"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:foregroundGravity="center"
                    android:padding="5dp"
                    app:srcCompat="@drawable/qrsimple" />

                <TextView
                    android:id="@+id/txtscaning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/im"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_toEndOf="@+id/textView2"
                    android:text="@string/readingqr" />

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/avloadingIndicatorView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtscaning"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    app:indicatorColor="@color/colorPrimary"
                    app:indicatorName="BallScaleIndicator" />

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/avloadingIndicatorView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtscaning"
                    android:layout_alignBottom="@+id/avloadingIndicatorView1"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="1dp"
                    android:foregroundGravity="center"
                    android:visibility="gone"
                    app:indicatorColor="@color/colorPrimary"
                    app:indicatorName="BallRotateIndicator" />

                <ProgressBar
                    android:id="@+id/progressBar2"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="14dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/mershant_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/border_accent2"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="@string/added_by_colon"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvFullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="5dp"
                        android:gravity="center"
                        android:text="Full Name"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <com.libraries.imageview.RoundedImageView
                        android:id="@+id/imgViewThumbUser"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_below="@+id/tvFullName"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="5dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/bg_image_thumb_placeholder" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgFaceBook"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_facebook_logo" />

                        <ImageView
                            android:id="@+id/imgInstagram"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_instagram_logo" />

                        <ImageView
                            android:id="@+id/imgDail"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_call_logo" />

                        <ImageView
                            android:id="@+id/imgEmail"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_facebook_logo" />
                    </LinearLayout>


                </LinearLayout>

                <Button
                    android:id="@+id/btnQrGiftRule"
                    style="@style/ColoredButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/avloadingIndicatorView2"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/buttonstyle"
                    android:text="@string/gift_rules"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnQRLocation"
                    style="@style/ColoredButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/buttonstyle"
                    android:text="@string/location"
                    android:visibility="gone" />

            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/floatinglayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:visibility="gone"
            tools:layout_editor_absoluteY="392dp">

            <android.support.design.widget.FloatingActionButton xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:elevation="0dp"
                android:padding="10dp"
                app:backgroundTint="@color/colorAccent"
                app:borderWidth="0dp"
                app:fabSize="normal"
                app:srcCompat="@drawable/ic_menu_map" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toStartOf="@+id/fab"
                android:layout_toLeftOf="@+id/fab"
                android:text="@string/locations"
                android:textColor="#000000" />

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/avloadingIndicatorView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtscaning"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:visibility="visible"
                app:indicatorColor="@color/colorPrimary"
                app:indicatorName="BallClipRotateIndicator" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
