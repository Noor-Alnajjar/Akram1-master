<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    tools:context="com.joserv.activities.EventDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/eventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_event_note_black_24dp"
            android:drawablePadding="10dp"
            android:textColor="@color/colorGreen"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/eventDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_subject_black_24dp"
            android:drawablePadding="10dp"
            android:textColor="@color/colorGreen"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/eventCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_pin_drop_black_24dp"
            android:drawablePadding="10dp"
            android:textColor="@color/colorGreen"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/eventCreatedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_update_black_24dp"
            android:drawablePadding="10dp"
            android:textColor="@color/colorGreen"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/eventStartingDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_history_black_24dp"
            android:drawablePadding="10dp"
            android:textColor="@color/colorGreen"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/eventScheduled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_schedule_black_24dp"
            android:drawablePadding="10dp"
            android:textColor="@color/colorGreen"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/eventGifts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_card_giftcard_black_24dp"
            android:drawablePadding="10dp"
            android:textColor="@color/colorGreen"
            android:textSize="15sp" />

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="10dp" />

    </LinearLayout>
</LinearLayout>
